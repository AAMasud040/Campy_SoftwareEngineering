<!DOCTYPE html>
<html>

<head>
	<title>Semantic UI Sidebar Types</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500&display=swap" rel="stylesheet">
	<link href=
"https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"
		rel="stylesheet" />

	<script src=
"https://code.jquery.com/jquery-3.1.1.min.js"
			integrity=
"sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
			crossorigin="anonymous">
	</script>
	<script src=
        "https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js">
	</script>
    <link rel="stylesheet" href="base_designcss.css">
</head>

<body>
	<div class="ui sidebar vertical left inverted menu">
		<a class="item " href="/course">Add New Course</a>
		<a class="item active" href="#">Enrolled Course List</a>
		<a class="item">Add Tag</a>
	</div>
	<div class="ui basic icon top fixed inverted menu" >
        <a id="toggle" class="item">
            <i class="sidebar icon"></i>
            Menu
        </a>
        <div class="item mid" ><h2 class="ui inverted header">Campy</h2></div>
        <div class="ui right inverted simple dropdown item">
            Dropdown
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item">Logout</div>
              <div class="item">Profile</div>
            </div>
        </div>
    </div>

    <div class="pusher">
        <div class="ui container" style="padding-top: 100px;">
            <!-- put everything here -->
            
            
            <select name="tags" id="tag">
                <% if(data.tags.length == 0){ %>
                    <option disabled value=""> No tag available </option>
                <% } else{ %>
                    <% data.tags.map( (val) =>{ %> 
                        <option value=""> <%= val.tag_name %> </option>
                    <% }) %>
                <% } %>   
            </select>
            
            <form action="/addTag" method="POST">
                <h3>Tag Name:</h3>
                <input type="text" id="name1" name="name1" placeholder="Tag name">                
                <input type="submit" value="Submit">
            </form>

            <!-- put everything up -->
        </div>
    </div>
    
    

	<script>
        $("#toggle").click(function(){
            $('.ui.sidebar').sidebar('toggle');
        });
		
	</script>
</body>
</html>